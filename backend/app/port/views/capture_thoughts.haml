%head
  %meta{'charset' => 'utf-8'}
  %title Capture Thoughts
  %meta{'name' => 'viewport', 'content' => 'width=device-width,initial-scale=1'}

  %link{'rel' => 'stylesheet', 'href' => '/gtd/css/style.css'}
  %script{'src' => 'http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js'}
  %script{'src' => '/gtd/js/lib/underscore.js'}
  %script{'src' => '/gtd/js/lib/backbone.js'}
  %script{'defer' => true, 'src' => '/gtd/js/script.js'}

%h1
  Capture Thoughts

%span Enter thought:
%br
%textarea{:name => "text"}

%h2 Existing thoughts:
%div#thoughts-view


/ Templates
%script#thoughts-template{"type" => "text/template"}
  <div class="todo <%= done ? 'done' : '' %>">
  %div.display
    <input class="check" type="checkbox" <%= done ? 'checked="checked"' : '' %> />
    %div.todo-text
    %span#todo-destroy
  %div.edit
    %input.todo-input{"type" => "text", "value" =>""}/
  </div>